{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    // Remove type checking during development
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "lib/utils.js",
    "components/ui/switch.jsx",
    "components/ui/input.tsx",
    "components/dasboard-select.jsx",
    "components/ui/tabs.jsx",
    "components/ui/slider.jsx",
    "app/not-found.js",
    "app/pages/(chart)/(re-chart)/charts-rechart-pie/twolevel-pie.jsx",
    "app/pages/(chart)/(re-chart)/charts-rechart-pie/two-simple-pie.jsx",
    "app/pages/(chart)/(re-chart)/charts-rechart-radialbar/basic-radial-bar.jsx",
    "app/pages/(chart)/(re-chart)/charts-rechart-bar/barchart-with-multixaxis.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}